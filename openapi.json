    "/v2/pods": {
      "get": {
        "summary": "List Pods",
        "description": "Use query params to filter checkpoints",
        "operationId": "list",
        "responses": {
          "200": {
            "description": "Returns pods",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Pod"
                  }
                }
              }

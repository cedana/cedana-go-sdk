    "/v2/user": {
      "get": {
        "tags": [
          "cedana"
        ],
        "operationId": "get_user",
        "responses": {
          "200": {
            "description": "Returns your `user-id` (a uuid)",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "Invalid Key/Token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpError"
                }
              }
            }
          },
          "404": {
            "description": "User not attached to valid api key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpError"

    "/v2/checkpoints/uploaded/{id}": {
      "post": {
        "tags": [
          "cedana_checkpoints"
        ],
        "summary": "Uploaded Checkpoint",
        "operationId": "uploaded",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Marks the checkpoint as successfully uploaded",

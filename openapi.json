    "/v2/restore/pod": {
      "post": {
        "summary": "Restore a Pod",
        "operationId": "restore_pod",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RestorePod"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Returns the checkpoint id for the new checkpoint",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                },
                "example": "<uuid-v4-here>"
              }
